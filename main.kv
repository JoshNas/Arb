<Display>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: None
            size_hint_y: None
            height: 20
            width: root.width
            padding: [0, 0, 25, 0]
            Label:
                font_size: 12
                text: 'NFL: '
            CheckBox:
                name: 'NFL'
                active: app.nfl_active
                size_hint_x: .05
                color: .294, .761, .623
                on_active: root.update_settings(self, self.name, self.active)
            Label:
                font_size: 12
                text: 'NCAAF:'
            CheckBox:
                name: 'NCAAF'
                active: app.ncaaf_active
                size_hint_x: .05
                color: .294, .761, .623
